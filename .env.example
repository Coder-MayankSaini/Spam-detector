# Production Environment Variables for Neon.tech deployment
# Copy this to .env and fill in your actual values

# Database Configuration (Neon.tech PostgreSQL)
DATABASE_URL=postgresql://username:password@your-neon-host/dbname?sslmode=require
DB_HOST=your-neon-host.neon.tech
DB_NAME=your-database-name
DB_USER=your-username
DB_PASSWORD=your-password
DB_PORT=5432

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production

# Email Configuration (for password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# OCR Configuration
TESSERACT_PATH=/usr/bin/tesseract

# CORS Origins (Vercel frontend URL)
CORS_ORIGINS=https://your-app.vercel.app,http://localhost:3000

# Debug Mode
DEBUG=false

# Port (Railway/Heroku will provide this)
PORT=5000
